{
  "name": "workmatic",
  "version": "1.0.5",
  "description": "A persistent job queue for Node.js using SQLite",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "workmatic": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "dashboard"
  ],
  "scripts": {
    "build": "tsup",
    "build:types": "tsc --emitDeclarationOnly",
    "test": "vitest run",
    "test:watch": "vitest",
    "bench": "tsx benchmarks/run.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "job-queue",
    "task-queue",
    "sqlite",
    "persistent",
    "background-jobs",
    "worker"
  ],
  "author": "cond",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/litepacks/workmatic.git"
  },
  "bugs": {
    "url": "https://github.com/litepacks/workmatic/issues"
  },
  "homepage": "https://github.com/litepacks/workmatic#readme",
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "cli-table3": "^0.6.5",
    "fastq": "^1.18.0",
    "kysely": "^0.27.5",
    "nanoid": "^5.0.9"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.7",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
